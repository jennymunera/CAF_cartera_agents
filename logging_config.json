{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "json": {
      "class": "utils.app_insights_logger.JSONFormatter",
      "format": "%(asctime)s %(name)s %(levelname)s %(message)s"
    },
    "standard": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "standard",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "logs/application.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    },
    "app_insights": {
      "class": "utils.app_insights_logger.AppInsightsHandler",
      "level": "INFO",
      "formatter": "json"
    }
  },
  "loggers": {
    "main_processor": {
      "level": "INFO",
      "handlers": ["console", "file", "app_insights"],
      "propagate": false
    },
    "document_intelligence_processor": {
      "level": "INFO",
      "handlers": ["console", "file", "app_insights"],
      "propagate": false
    },
    "chunking_processor": {
      "level": "INFO",
      "handlers": ["console", "file", "app_insights"],
      "propagate": false
    },
    "openai_batch_processor": {
      "level": "INFO",
      "handlers": ["console", "file", "app_insights"],
      "propagate": false
    },
    "batch_results_processor": {
      "level": "INFO",
      "handlers": ["console", "file", "app_insights"],
      "propagate": false
    }
  },
  "root": {
    "level": "WARNING",
    "handlers": ["console", "file"]
  }
}